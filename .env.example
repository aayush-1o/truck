# Server Configuration
NODE_ENV=development
PORT=5000

# MongoDB Connection
# For MongoDB Atlas, use the connection string from your cluster
# Example: mongodb+srv://username:password@cluster.mongodb.net/freightflow?retryWrites=true&w=majority
MONGODB_URI=mongodb://localhost:27017/freightflow

# JWT Configuration
JWT_SECRET=freightflow_secret_key_change_in_production_2024
JWT_EXPIRE=7d

# Email Configuration (Gmail)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Frontend URL (for password reset links)
FRONTEND_URL=http://localhost:5500

# Optional: SendGrid (Alternative to Gmail)
# SENDGRID_API_KEY=your_sendgrid_api_key

# Optional: Razorpay (for payments - to be configured later)
# RAZORPAY_KEY_ID=your_key
# RAZORPAY_KEY_SECRET=your_secret
